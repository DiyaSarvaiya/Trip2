@using Trip2.Areas.Users_Area.Models;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}
@model UsersModel;
<section>
    <div class="card container w-25 mt-5 justify-content-center align-items-center d-flex">
        <div class="card-body">

            <div class="pt-4 pb-2 mb-4">
                <h3 class="card-title text-center pb-0 fs-4">Login to Your Account</h3>
                <p class="text-center small">Enter your username & password to login</p>
            </div>

            <form class="row g-3" asp-area="Users_Area" asp-controller="Users" asp-action="UserLogin">
                <div class="col-12 mb-4">
                    @if (TempData["Error"] != null)
                    {
                        <div class="text-danger">@Html.Raw(TempData["Error"])</div>
                    }
                    <label for="yourUsername" class="form-label">Username</label>
                    <div class="input-group">
                        <input type="text" asp-for="Username" name="username" class="form-control" id="yourUsername">
                    </div>
                    <span class="text-danger" asp-validation-for="Username"></span>
                </div>

                <div class="col-12 mb-4">
                    <label for="yourPassword" class="form-label">Email</label>
                    <input type="text" asp-for="Email" name="Email" class="form-control" id="yourPassword">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="col-12 mb-4">
                    <label for="yourPassword" class="form-label">PhoneNo</label>
                    <input type="text" asp-for="PhoneNo" name="PhoneNo" class="form-control" id="yourPassword">
                    <span class="text-danger" asp-validation-for="PhoneNo"></span>
                </div>

                <div class="col-12 mb-4">
                    <label for="yourPassword" class="form-label">Password</label>
                    <input type="password" asp-for="Password" name="password" class="form-control" id="yourPassword">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="col-12 mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="remember" value="true" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">Remember me</label>
                    </div>
                </div>
                
               
                <div class="col-12 mb-4">
                    <button class="btn btn-primary w-100" type="submit" asp-area="Users" asp-controller="Users" asp-action="UserSignIn">Sign In</button>
                </div>
                
            </form>

        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}