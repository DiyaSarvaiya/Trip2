@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Trip2.Areas.Package.Models;
@using System.Data;
@model PackageModel;
<div class="bradcam_area breadcam_bg_1">
    <h3>Package</h3>
</div>
<link rel="stylesheet" href="~/package/package.css" />

<div class="d-flex justify-content-center">
    <div class="package-form" class="mb-0 mt-5">
        <div class="form-header">
            <h1>Package</h1>
        </div>
        @if (Model.userDestiModel.Rows.Count != 0)
        {
            @foreach (DataRow row in Model.userDestiModel.Rows)
            {
                <div class="package-card ml-0 pb-0 ">
                    <h1 class="section-title">
                        Destination
                    </h1>
                    <div class="package-inner-card ">
                        <div class="package-img">
                            <img src="@row["DestiPhoto"]" />
                        </div>
                        <div class="detail-card ">
                            <h2 class="detail-title">@row["DestiName"]</h2>
                            <div class="row mt-4">
                                <p class="col-2 detail-name">Place </p>
                                <h4 class="col-6 detail">@row["CityName"] , @row["StateName"], @row["CountryName"]</h4>
                            </div>
                            <div class="row mt-2">
                                <p class="col-2 detail-name">Date </p>
                                <h4 class="col-6 detail">01-03-2024</h4>
                            </div>
                            <div class="row mt-2">
                                <p class="col-2 detail-name">People </p>
                                <h4 class="col-6 detail">3</h4>
                            </div>
                            <div class="mt-2">
                                <a asp-area="Destination" asp-controller="Destination" asp-action="Destination" class="btn btn-primary pl-3 pr-3">Change</a>
                            </div>
                        </div>

                    </div>

                </div>


            }
        }
        else
        {
            <div class="d-flex align-items-center justify-content-center row">
                <div class="col-12 d-flex align-items-center justify-content-center">
                    <img src="~/package/NoData.png" height="200px;">
                </div>

                <h3 class="text-muted">No Destination is Added yet !</h3>
            </div>
        }

        <div class="package-card ml-0 pb-0 ">
            <h1 class="section-title">
                Flight
            </h1>
            @* Model.userFlightModel.Rows != null *@
            @if (Model.userFlightModel.Rows.Count != 0)
            {

                @foreach (DataRow row in Model.userFlightModel.Rows)
                {
                    <div class="package-inner-card">
                        <div class="row detail-card-1  float-left ml-3">
                            <div class="package-flight-img col-3">
                                <img src="@row["FlightPhoto"]" alt="Photo" />
                            </div>
                            <div class="d-flex justify-content-center align-items-center">
                                <h4 class="col-12 detail-name">@row["AirlineName"] | @row["FlightNo"]</h4>
                            </div>
                            <div class="row w-100 mt-2">
                                <p class="col-6 detail-name">Flying From </p>
                                <h4 class="col-6 text-end detail">@row["DepartureCity"]</h4>
                            </div>
                            <div class="row mt-2 w-100">
                                <p class="col-6 detail-name">Departure Time </p>
                                <h4 class="col-6 text-end detail">@row["DepartureTime"]</h4>
                            </div>
                            <div class="row mt-2 w-100">
                                <p class="col-6  detail-name">Adults </p>
                                <h4 class="col-6 text-end detail">@row["DepartureCity"]</h4>
                            </div>
                            <div class="row mt-2 w-100">
                                <p class="col-6 detail-name">Children </p>
                                <h4 class="col-6 text-end detail">@row["DepartureCity"]</h4>
                            </div>

                        </div>
                        <div class="detail-card ml-0 pl-3">
                            <div class="row w-100 mt-2">
                                <p class="col-6 detail-name">Type </p>
                                <h4 class="col-6 detail">@row["FlightType"]</h4>
                            </div>

                            <div class="row w-100 mt-2">
                                <p class="col-6 detail-name">Class </p>
                                <h4 class="col-6 detail">@row["Class"]</h4>
                            </div>

                            <div class="row w-100 mt-2">
                                <p class="col-6 detail-name">Flying To </p>
                                <h4 class="col-6 detail">@row["DestinationCity"]</h4>
                            </div>

                            <div class="row w-100 mt-2">
                                <p class="col-6 detail-name">Arrival Time </p>
                                <h4 class="col-6 detail">@row["ArrivalTime"]</h4>
                            </div>
                            <div class="row mt-2 ml-1">
                                <a asp-area="Flight" asp-controller="Flight" asp-action="Flight" class="btn btn-primary pl-3 pr-3">Change</a>

                            </div>

                        </div>
                        <div class="summery-box">
                            <h2 class="detail-title">Summary</h2>
                            <div class="mt-3">
                                <div class="row w-100">
                                    <h3 class="detail-name mb-0 col-6">Cost</h3>
                                    <h4 class="col-6">$ @row["FlightPrice"]</h4>
                                </div>
                                <div class="row w-100">
                                    <h3 class="detail-name col-12">(@row["FlightAdults"] Adult-@row["FlightAdults"] Children)</h3>

                                </div>
                                <div class="row w-100 mt-5">
                                    <h3 class="total-cost mb-0 col-6">Total Cost</h3>
                                    <h4 class="col-6">$ @row["FlightTotalCost"]</h4>
                                </div>
                            </div>
                        </div>
                    </div>



                }

            }
            else
            {
                <div class="d-flex align-items-center justify-content-center row">
                    <div class="col-12 d-flex align-items-center justify-content-center">
                        <img src="~/package/NoData.png" height="200px;">
                    </div>

                    <h3 class="text-muted">No Flight is Added yet !</h3>
                </div>
            }

        </div>


        <div class="package-card ml-0 pb-0 ">
            <h1 class="section-title">
                Hotel
            </h1>
            @if (Model.userHotelModel.Rows.Count != 0)
            {
                @foreach (DataRow row in Model.userHotelModel.Rows)
                {
                    <div class="package-inner-card ">
                        <div class="package-img">
                            <img src="@row["HotelPhoto"]" alt="image" />
                        </div>
                        <div class="detail-card row">
                            <div class="row w-100 mt-2">
                                <p class="col-6 detail-name">Name </p>
                                <h4 class="col-6 detail">@row["HotelName"]</h4>
                            </div>
                            <div class="row w-100 mt-2">
                                <p class="col-6 detail-name">Check In </p>
                                <h4 class="col-6 detail">@row["CheckIn"]</h4>
                            </div>
                            <div class="row w-100 mt-2">
                                <p class="col-6 detail-name">Check Out </p>
                                <h4 class="col-6 detail">@row["CheckOut"]</h4>
                            </div>
                            <div class="row w-100 mt-2">
                                <p class="col-6 detail-name">Room Type </p>
                                <h4 class="col-6 detail">@row["RoomType"]</h4>
                            </div>


                            <div class="row col-6 mt-2">
                                <a asp-area="Hotel" asp-controller="Hotel" asp-action="Hotel" class="btn btn-primary pl-3 pr-3">Change</a>

                            </div>

                        </div>
                        <div class="summery-box">
                            <h2 class="detail-title">Summary</h2>
                            <div class="mt-3">
                                <div class="row w-100">
                                    <h3 class="detail-name mb-0 col-6">Cost</h3>
                                    <h4 class="col-6">$ @row["HotelPrice"]</h4>
                                </div>
                                <div class="row w-100">
                                    <h3 class="detail-name col-12">(@row["HotelAdults"] Adult-@row["HotelChildren"] Children)</h3>

                                </div>
                                <div class="row w-100 mt-5">
                                    <h3 class="total-cost mb-0 col-6">Total Cost</h3>
                                    <h4 class="col-6">$ @row["HotelTotalCost"]</h4>
                                </div>
                            </div>
                        </div>
                    </div>

                }
            }
            else
            {
                <div class="d-flex align-items-center justify-content-center row">
                    <div class="col-12 d-flex align-items-center justify-content-center">
                        <img src="~/package/NoData.png" height="200px;">
                    </div>

                    <h3 class="text-muted">No Hotel is Added yet !</h3>
                </div>
            }
        </div>

        <div class="package-card ml-0 pb-0 " style="height:100px">
@*             <h3 class="col-6 float-left">Enjoy Your Journy !</h3>
            <h3 class="col-4 float-left">Total Cost : $ 2000000</h3> *@
            <h3 class="mr-5 ml-4 float-left mt-2">Enjoy Your Journy !</h3>
            
            <a asp-area="Package" asp-controller="Package" asp-action="Payment" class="btn col-2 btn-secondary float-right text-light mr-4 mt-2">Proceed To Pay</a>
            <h3 class="float-right mr-5 mt-2">Total Cost : @Model.TotalCost</h3>
        </div> 

    </div>

</div>

