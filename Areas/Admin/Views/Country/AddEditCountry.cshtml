@using Trip2.Areas.Admin.Models;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
@model CountryModel;
<div class=" mt-5 h-100" style="margin-left:18%;width:70%">
    <div class="card shadow h-100">
        <form method="post" asp-area="Admin" asp-controller="Country" asp-action="Insert" class="display-4" style="margin:5%;">

            <div class="row">
                <div class="mb-3 col-12">ADD / EDIT Country</div>
                @Html.HiddenFor(x=>x.CountryID)
                <div class="col-12 p-2 m-0">
                    <label class="form-control-label">Country Name</label>
                    <input asp-for="CountryName" class="form-control text-black-50 font-weight-bold">
                    <h3> <span asp-validation-for="CountryName" class="text-danger"></span></h3>
                </div>

                <div class="ml-2 mt-3">
                    <a class="btn btn-info text-white mt-3" onclick="goBack()">Back</a>
                    <button type="submit" class="btn btn-primary ml-2 mt-3">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    function goBack() {
        window.history.back();
    }
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


