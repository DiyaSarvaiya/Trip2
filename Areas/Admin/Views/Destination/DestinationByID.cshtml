@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
@using System.Data;
@model DataTable;
<link href="~/admin/css/admin-view.css" rel="stylesheet" />
<div class=" mt-5 d-flex justify-content-center" style="margin-left:13%; height:600px;width:80%;">
    <div class="shadow w-75">
        <div class="card-header">
            <h2 class="ml-4">Destination Detail</h2>
        </div>
        <div class="row p-5 w-100 d-flex justify-content-center">
            @{
                @foreach (DataRow dr in Model.Rows)
                {
                    <div class="row w-100">
                        <div class="col-5"><img src="@dr["Photo1"]" height="400px" width="400px" /></div>
                        <div class="col-6 ml-5">
                            <div class="row mb-2 mt-2">
                                <h3 class="col-5">Name : </h3>
                                <h3 class="col-7 text-muted">@dr["Name"]</h3>
                            </div>
                            <div class=" row mb-2">
                                <h3 class="col-5">Detail : </h3>
                                <h3 class="col-7 text-muted">@dr["Detail"]</h3>
                            </div>
                            <div class=" row mb-2">
                                <h3 class="col-5">Climate : </h3>
                                <h3 class="col-7 text-muted">@dr["Climate"]</h3>
                            </div>
                            <div class=" row mb-2">
                                <h3 class="col-5">Best Time To Visit : </h3>
                                <h3 class="col-7 text-muted">@dr["BestTimeToVisit"]</h3>
                            </div>
                            <div class=" row mb-2">
                                <h3 class="col-5">Currency : </h3>
                                <h3 class="col-7 text-muted">@dr["Currency"]</h3>
                            </div>
                            <div class=" row mb-2">
                                <h3 class="col-5">Language : </h3>
                                <h3 class="col-7 text-muted">@dr["Language"]</h3>
                            </div>
                            <div class=" row mb-2">
                                <h3 class="col-5">Travel Tip : </h3>
                                <h3 class="col-7 text-muted">@dr["TravelTips"]</h3>
                            </div>
                            <div class=" row mb-2">
                                <h3 class="col-5">Rating : </h3>
                                <h3 class="col-7 text-muted">@dr["Rating"]</h3>
                            </div>
                            <a class="btn btn-primary text-dark col-2  mt-2" onclick="goBack()">Back</a>
                        </div>

                    </div>
                }
            }
        </div>
    </div>
</div>
<script>
    function goBack() {
        window.history.back();
    }
</script>
