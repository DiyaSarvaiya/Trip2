@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/flight/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/flight/css/style.css" />
@using System.Data;
@model DataTable;

<div class="bradcam_area breadcam_bg_1">
    <h3>Rooms</h3>
</div>

<div class="pl-4 pr-4" style="height: 25%; ">
    <hr />

    <div style="height:60px" class="w-100 m-3 d-flex justify-content-center">
        @if (TempData["Hotel_SuccessMessage"] != null)
        {
            <div class="alert alert-success h-100" role="alert">
                @TempData["Hotel_SuccessMessage"]
            </div>
        }
        @if (TempData["Hotel_Error"] != null)
        {
            <div class="alert alert-success h-100" role="alert">
                @TempData["Hotel_Error"]
            </div>
        }
    </div>

    <form id="form1" method="post" asp-area="Room" asp-controller="Room" asp-action="SearchRoom">
        <div class="d-flex justify-content-center pt-0" style="width:100%;padding-left:7%;padding-right:7%;padding-bottom:3%">
            <div class="booking-form mb-0 mt-5 w-100 ml-0 mr-0 pl-5 pr-5 pb-5 shadow">
                <div class="form-header p-5">
                    <h1>Book Your Room</h1>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input class="" type="date" name="CheckIn" placeholder="Check In">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input class="" type="date" name="CheckOut" placeholder="Check Out">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <select class="" name="Type" style="height:50px">
                                <option value="Suit">Suit</option>
                                <option value="Single">Single Room</option>
                                <option value="Double">Double Room</option>
                                <option value="Deluxe">Deluxe Room</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <input class="form-control" name="Adults" value="" type="text" placeholder="Adults">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <input class="form-control" name="Children" value="" type="text" placeholder="Children">
                        </div>
                    </div>
                </div>
                <div class="form-btn">
                    <button class="submit-btn" type="submit">Check availability</button>

                </div>
            </div>



        </div>
    </form>
</div>
<div class="" style="height: 800px; padding-left:7%;padding-right:7%">
    <div class="mr-3 mt-2 shadow d-inline-block float-left" style="width:20%;height:97%">
